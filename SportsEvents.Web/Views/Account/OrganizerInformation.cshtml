@using Microsoft.AspNet.Identity
@using SportsEvents.Web.Models
@model SportsEvents.Web.ViewModels.RegisterOrganizerViewModel

@{
    ViewBag.Title = "Manage Organizer Information";
}
<div>

    @using (Html.BeginForm("OrganizerInformation", "Account", new { name = User.Identity.GetUserName() }, FormMethod.Post, new { @class = "form-horizontal well col-md-10", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <h4>Manage Organizer Information</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Name</span>
                </div>
                <div class="panel-body">

                    <div class="form-group col-md-5">
                        @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control ", placeholder = "First Name" })
                        </div>
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })


                    </div>


                    <div class="form-group col-md-push-1 col-md-5">
                        @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control ", placeholder = "Last Name" })

                        </div>
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })


                    </div>


                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Address</span>
                </div>

                <div class="panel-body">

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.LineOne, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.LineOne, new { @class = "form-control", placeholder = "Address Line One" })
                        </div>
                        @Html.ValidationMessageFor(m => m.LineOne, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.LineTwo, new { @class = "control-label" })

                        <div>
                            @Html.TextBoxFor(m => m.LineTwo, new { @class = "form-control", placeholder = "Address Line Two" })
                        </div>
                        @Html.ValidationMessageFor(m => m.LineTwo, "", new { @class = "text-danger" })
                    </div>



                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                        <div>

                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone Number" })
                        </div>

                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.CountryId, new { @class = "control-label" })
                        <div>

                            @Html.DropDownListFor(m => m.CountryId, new SelectList(Model.Countries, "Id", "Name"), "---Selecy Country ---", new { @class = "form-control", id = "country" })
                        </div>

                        @Html.ValidationMessageFor(m => m.CountryId, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.State, new { @class = "control-label" })
                        <div>

                            @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "State" })
                        </div>

                        @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.CityId, new { @class = "control-label" })
                        <div>
                            @Html.DropDownListFor(m => m.CityId, new SelectList(new List<City>(), "Id", "Name"), "---Selecy City ---", new { @class = "form-control", disabled = "disabled", id = "city" })
                        </div>
                        @Html.ValidationMessageFor(m => m.CityId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Zip, new { @class = "control-label" })
                        <div>

                            @Html.TextBoxFor(m => m.Zip, new { @class = "form-control", placeholder = "State" })
                        </div>

                        @Html.ValidationMessageFor(m => m.Zip, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Organization Information</span>
                </div>

                <div class="panel-body">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.OrganizationName, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.OrganizationName, new { @class = "form-control", placeholder = "Organization Name*" })

                        </div>
                        @Html.ValidationMessageFor(m => m.OrganizationName, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Link, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.Link, new { @class = "form-control", placeholder = "Organization Website" })

                        </div>
                        @Html.ValidationMessageFor(m => m.Link, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.OrganizationDecription, new { @class = "control-label" })
                        <div>
                            @Html.TextAreaFor(m => m.OrganizationDecription, new { @class = "form-control", placeholder = "Organaization Description" })

                        </div>
                        @Html.ValidationMessageFor(m => m.OrganizationDecription, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.OrganaiztionLogo, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.OrganaiztionLogo, new { @class = "form-control", type = "file", placeholder = "First Name", accept = "Image/*" })

                        </div>
                        @Html.ValidationMessageFor(m => m.OrganaiztionLogo, "", new { @class = "text-danger" })


                    </div>

                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Billing Address</span>
                </div>

                <div class="panel-body">


                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactFirstName, new {@class = "control-label"})
                        <div>
                            @Html.TextBoxFor(m => m.ContactFirstName, new {@class = "form-control", placeholder = "First Name"})
                        </div>
                        @Html.ValidationMessageFor(m => m.ContactFirstName, "", new {@class = "text-danger"})


                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactLastName, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.ContactLastName, new { @class = "form-control", placeholder = "Last Name" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ContactLastName, "", new { @class = "text-danger" })


                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ConatactEmail, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.ConatactEmail, new { @class = "form-control", placeholder = "example: abc@xyz.com" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConatactEmail, "", new { @class = "text-danger" })


                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactPhone, new { @class = "control-label" })
                        <div>

                            @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control", placeholder = "Phone Number" })
                        </div>

                        @Html.ValidationMessageFor(m => m.ContactPhone, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactLineOne, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.ContactLineOne, new { @class = "form-control", placeholder = "Address Line Two" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ContactLineOne, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactLineTwo, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.ContactLineTwo, new { @class = "form-control", placeholder = "Address Line Two" })

                        </div>
                        @Html.ValidationMessageFor(m => m.ContactLineTwo, "", new { @class = "text-danger" })


                    </div>



                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactCountryId, new { @class = "control-label" })
                        <div>
                            @Html.DropDownListFor(m => m.ContactCountryId, new SelectList(Model.Countries, "Id", "Name"), "---Selecy Country ---", new { @class = "form-control", id = "contactCountry" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ContactCountryId, "", new { @class = "text-danger" })


                    </div>


                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactState, new { @class = "control-label" })
                        <div>

                            @Html.TextBoxFor(m => m.ContactState, new { @class = "form-control", placeholder = "State" })
                        </div>

                        @Html.ValidationMessageFor(m => m.ContactState, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactCityId, new { @class = "control-label" })
                        <div>
                            @Html.DropDownListFor(m => m.ContactCityId, new SelectList(new List<City>(), "Id", "Name"), "---Selecy City ---", new { @class = "form-control", disabled = "disabled", id = "contactCity" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ContactCountryId, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ContactZip, new { @class = "control-label" })
                        <div>

                            @Html.TextBoxFor(m => m.ContactZip, new { @class = "form-control", placeholder = "State" })
                        </div>

                        @Html.ValidationMessageFor(m => m.ContactZip, "", new { @class = "text-danger" })

                    </div>

                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-3">
                <input type="submit" class="btn btn-lg" value="Submit" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/reg")
}